@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="view-login" class="view-section active h-screen flex items-center justify-center relative">
    <div class="w-full max-w-md px-4 z-10">
        <div class="text-center mb-8">
            <div onclick="navigateTo('/')" class="inline-flex items-center gap-2 mb-4 cursor-pointer hover:opacity-80">
                <i class="fa-solid fa-microphone-lines text-3xl text-brand-purple"></i>
                <span class="font-bold text-3xl tracking-tight">Karaoke<span class="text-brand-purple">Flow</span></span>
            </div>
            <h2 class="text-xl text-gray-400">Acesse sua conta</h2>
        </div>

        <div class="glass-card p-8 rounded-2xl shadow-2xl">
            <form onsubmit="handleLogin(event)" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                    <input type="email" class="w-full bg-black/40 border border-gray-700 rounded-lg px-4 py-3 text-white focus:border-brand-purple focus:outline-none focus:ring-1 focus:ring-brand-purple" placeholder="seu@email.com" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Senha</label>
                    <input type="password" class="w-full bg-black/40 border border-gray-700 rounded-lg px-4 py-3 text-white focus:border-brand-purple focus:outline-none focus:ring-1 focus:ring-brand-purple" placeholder="••••••••" required>
                </div>

                <button type="submit" class="w-full bg-gradient-to-r from-brand-purple to-brand-pink hover:opacity-90 text-white font-bold py-3 px-4 rounded-lg shadow-lg shadow-purple-500/25 transition-all">
                    Entrar
                </button>
            </form>
            <div class="mt-8 text-center text-sm text-gray-500">
                <span>Não tem uma conta?</span>
                <a href="#" onclick="navigateTo('/Register')" class="text-brand-purple hover:text-white">Cadastre-se</a>
            </div>
        </div>
    </div>
</section>