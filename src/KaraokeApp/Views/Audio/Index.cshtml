@{
    ViewData["Title"] = "Studio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script>
        checkLogin();
    </script>
}

<section id="view-app" class="view-section active min-h-screen flex flex-col">
    <!-- App Header -->
    <header class="border-b border-white/10 bg-black/50 backdrop-blur-md sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 w-full h-16 flex items-center justify-between">
            <div class="flex items-center gap-2 cursor-pointer" onclick="navigateTo('/')">
                <i class="fa-solid fa-microphone-lines text-xl text-brand-purple"></i>
                <span class="font-bold text-xl tracking-tight">Karaoke<span class="text-brand-purple">Flow</span> <span class="text-xs bg-white/10 px-2 py-0.5 rounded text-gray-400 font-normal ml-2">Studio</span></span>
            </div>
            <div class="flex items-center gap-6">
                <div class="hidden md:flex items-center gap-2 text-sm text-gray-400 bg-white/5 px-3 py-1 rounded-full">
                    <i class="fa-solid fa-coins text-yellow-500"></i>
                    <span>Créditos: <strong>R$ 0,00</strong></span>
                </div>
                <button onclick="navigateTo('logout')" class="text-gray-400 hover:text-white text-sm"><i class="fa-solid fa-right-from-bracket mr-1"></i> Sair</button>
            </div>
        </div>
    </header>

    <!-- App Main -->
    <div class="flex-grow flex flex-col items-center justify-center p-4">
        <div class="w-full max-w-2xl">
            <div class="text-center mb-10">
                <h1 class="text-3xl font-bold mb-4">Vamos criar seu Karaokê</h1>
                <p class="text-gray-400">Envie seu arquivo MP3 e nossa IA fará o resto.</p>
            </div>

            <div class="relative glass-card rounded-2xl p-1 shadow-2xl">
                <div class="bg-[#0a0a12]/80 backdrop-blur-xl rounded-xl p-8 border border-white/5">

                    <!-- Header -->
                    <div class="flex justify-between items-center mb-8 border-b border-white/5 pb-4">
                        <h3 class="font-semibold text-white flex items-center gap-2"><i class="fa-solid fa-wand-magic-sparkles text-brand-purple"></i> Nova Conversão</h3>
                        <span class="text-xs text-gray-500 uppercase">MP3 para MP4</span>
                    </div>

                    <form id="upload-form" action="/Audio/Upload" method="post" enctype="multipart/form-data">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div>
                                <label for="musicTitle" class="block text-sm font-medium text-gray-300 mb-2">Título da Música</label>
                                <input type="text" id="musicTitle" name="musicTitle" class="w-full bg-black/40 border border-gray-700 rounded-lg px-4 py-3 text-white focus:border-brand-purple focus:outline-none focus:ring-1 focus:ring-brand-purple" placeholder="Digite o título da música">
                            </div>
                            <div>
                                <label for="artistName" class="block text-sm font-medium text-gray-300 mb-2">Nome do Artista</label>
                                <input type="text" id="artistName" name="artistName" class="w-full bg-black/40 border border-gray-700 rounded-lg px-4 py-3 text-white focus:border-brand-purple focus:outline-none focus:ring-1 focus:ring-brand-purple" placeholder="Digite o nome do artista">
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="language" class="block text-sm font-medium text-gray-300 mb-2">Idioma do Áudio</label>
                            <select id="language" name="language" class="w-full bg-black/40 border border-gray-700 rounded-lg px-4 py-3 text-white focus:border-brand-purple focus:outline-none focus:ring-1 focus:ring-brand-purple">
                                <option value="pt">Português</option>
                                <option value="es">Espanhol</option>
                                <option value="en">Inglês</option>
                            </select>
                        </div>
                        <!-- 1. Upload Zone -->
                        <div id="upload-zone" class="border-2 border-dashed border-gray-700 hover:border-brand-purple hover:bg-brand-purple/5 rounded-xl p-12 transition-all duration-300 cursor-pointer text-center group" onclick="document.getElementById('file-upload').click()">
                            <input id="file-upload" name="audioFile" type="file" class="hidden" accept=".mp3" onchange="handleFileUpload(this.files[0])">
                            <div class="w-20 h-20 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform shadow-lg group-hover:shadow-purple-500/20">
                                <i class="fa-solid fa-cloud-arrow-up text-3xl text-brand-purple"></i>
                            </div>
                            <h4 class="text-xl font-bold text-white mb-2">Arraste seu áudio aqui</h4>
                            <p class="text-gray-400 mb-6">ou clique para procurar</p>
                            <div class="flex justify-center gap-4 text-xs text-gray-500">
                                <span class="bg-gray-800 px-2 py-1 rounded">MP3</span>
                                <span class="bg-gray-800 px-2 py-1 rounded">Max 100MB</span>
                            </div>
                        </div>
                    </form>

                    <!-- 2. Processing -->
                    <div id="processing-state" class="hidden py-4 text-center">
                        <div class="relative w-24 h-24 mx-auto mb-6">
                            <div class="w-full h-full rounded-full border-4 border-gray-700"></div>
                            <div class="absolute top-0 left-0 w-full h-full rounded-full border-4 border-brand-purple border-t-transparent animate-spin"></div>
                            <div class="absolute inset-0 flex items-center justify-center"><span id="percentage-text" class="text-lg font-bold">0%</span></div>
                        </div>
                        <h4 class="text-lg font-semibold text-white animate-pulse" id="status-text">Iniciando...</h4>
                        <div class="w-full bg-gray-800 rounded-full h-2 mt-6 overflow-hidden">
                            <div id="progress-bar" class="bg-gradient-to-r from-brand-purple to-brand-pink h-2 rounded-full progress-bar-striped" style="width: 0%"></div>
                        </div>
                        <div class="mt-6 space-y-2 text-left bg-black/30 p-4 rounded-lg">
                            <div class="flex items-center gap-3 text-sm text-gray-500" id="step-1"><i class="fa-regular fa-circle w-4"></i> Isolando instrumental...</div>
                            <div class="flex items-center gap-3 text-sm text-gray-500" id="step-2"><i class="fa-regular fa-circle w-4"></i> Sincronizando legendas...</div>
                            <div class="flex items-center gap-3 text-sm text-gray-500" id="step-3"><i class="fa-regular fa-circle w-4"></i> Renderizando vídeo MP4...</div>
                        </div>
                    </div>

                    <!-- 3. Success -->
                    <div id="success-state" class="hidden text-center py-2">
                        <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-6"><i class="fa-solid fa-check text-3xl text-green-500"></i></div>
                        <h2 class="text-2xl font-bold text-white mb-2">Sucesso!</h2>
                        <p class="text-gray-400 mb-8">Seu vídeo Karaokê foi gerado.</p>
                        <div class="bg-black/40 rounded-xl p-4 mb-8 flex items-center gap-4 border border-gray-700">
                            <div class="w-16 h-16 bg-gray-800 rounded-lg flex items-center justify-center flex-shrink-0"><i class="fa-solid fa-video text-brand-purple"></i></div>
                            <div class="text-left flex-grow overflow-hidden">
                                <h5 id="download-filename" class="font-bold text-white truncate text-sm">video_karaoke_final.mp4</h5>
                                <p id="download-filesize" class="text-xs text-gray-500">14.2 MB • HD 1080p</p>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <button class="w-full bg-gray-700 hover:bg-gray-600 text-white py-3 px-4 rounded-xl font-bold" onclick="resetUpload()">Novo</button>
                            <a id="download-button" href="#" download class="w-full bg-gradient-to-r from-brand-purple to-brand-pink hover:opacity-90 text-white py-3 px-4 rounded-xl font-bold shadow-lg shadow-purple-500/20 flex items-center justify-center"><i class="fa-solid fa-download mr-2"></i> Baixar</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>